<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blueimg"
    tools:context=".loadingarea">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="317dp"
        android:layout_height="43dp"
        android:iconifiedByDefault="false"
        android:queryHint="@string/str6"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="298dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="243dp"
        android:layout_height="81dp"
        android:layout_marginTop="148dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Fresh to Home"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:minHeight="60dp"
        android:text=""
        tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="409dp" />


    <Button
        android:id="@+id/button"
        android:layout_width="136dp"
        android:layout_height="56dp"
        android:text="@string/st2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="537dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="309dp"
        android:layout_height="31dp"
        android:text="@string/str3"
        android:textSize="25sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="33dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="128dp"
        android:layout_height="35dp"
        android:text="@string/st4"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="italic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="415dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="131dp"
        android:layout_height="43dp"
        android:text="@string/st5"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="italic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="415dp" />


</androidx.constraintlayout.widget.ConstraintLayout>